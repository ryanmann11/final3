<%= form_for [@case, @review] do |form| %>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.select :rating, [1,2,3,4,5], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>
  <%= form.button 'Post Your Review', class: "btn btn-success" %>
<% end %>