
<%= form_for @giver do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :"Upload your picture" %>
    <%= form.file_field :photo %>
  </div>  
  <%= form.button title, class: "btn btn-success" %>
<% end %>