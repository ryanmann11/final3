<% if @case.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this case from being saved:</h2>
    <ul>
      <% @case.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1> What case are you an expert at? </h1>
<%= form_for @case do |form| %>
<div class="form-group">
    <%= form.label :"Type in Your Case Name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

    <div class="form-group">
    <%= form.label :firm %>
    <%= form.collection_select :firm_id, Firm.order(:name), :id, :name, { include_blank: true }, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :summary %>
    <%= form.text_area :summary, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group">
    <%= form.label :difficulty %>
    <%= form.text_field :difficulty, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :topic %>
    <%= form.text_field :topic, class: "form-control" %>
  </div>

    <%= form.button "Submit your case", class: "btn btn-success" %>
  <% end %>
